<UserControl x:Class="CubeApp.UserControls.ModularRectangle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CubeApp.UserControls"
             xmlns:vm="clr-namespace:CubeApp.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <UserControl.DataContext>
        <local:ModularRectangle/>
    </UserControl.DataContext>
    <Canvas>
        <Rectangle Fill="White" Height="100" Width="100"/>
        <ItemsControl DataContext="{Binding Children }" >
        </ItemsControl>
    </Canvas>
</UserControl>
